PORT=5001
NODE_ENV=development

# IP Whitelist Security
# Public IPs allowed to access (comma separated)
# Get your public IP: curl ifconfig.me
# Example: ALLOWED_IPS=113.161.123.45,42.118.234.56
ALLOWED_IPS=

# Local Network Ranges (comma separated)
# Default router ranges: 192.168.1.x, 192.168.0.x, 10.0.0.x
# Check your router settings to confirm your range
ALLOWED_LOCAL_RANGES=192.168.1.,192.168.0.,10.0.0.

# Database (Phase 2+)
# DATABASE_URL=postgresql://user:password@localhost:5432/billsplitter

# JWT (Phase 2+)
# JWT_SECRET=your-secret-key-here
